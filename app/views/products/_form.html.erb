<%= simple_form_for @product do |f| %>
  <%= f.input :name, placeholder: "Kudoz", label: "Which product?" %>
  <%= f.input :url, placeholder: "www.kudoz.com", label: "Which URL?" %>
  <%= f.input :tagline, placeholder: "tinder for job search", label: "Which tagline?" %>
  <%= f.input :category, collection: ["tech", "education", "design"], prompt: "Which category?" %>
  <%= f.button :submit, "Ajouter", class:"btn btn-primary" %>
<% end %>
